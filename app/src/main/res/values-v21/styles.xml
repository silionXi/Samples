<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorPrimary">@color/u</item>
        <item name="android:statusBarColor">@color/statusbar_bg</item>
        <item name="android:colorPrimaryDark">@color/h</item>
        <item name="android:windowBackground">@color/g</item>
        <item name="android:textColorPrimary">@color/tb</item>
        <item name="android:itemTextAppearance">@style/AppTheme.ItemTextAppearance</item>
        <item name="android:actionMenuTextColor">@color/actionmenu_text</item>
        <item name="android:itemBackground">@color/g</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.Spinner</item>
        <item name="android:homeAsUpIndicator">@drawable/tw_ic_ab_back_mtrl</item>
        <item name="android:dialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/tab</item>
        <item name="android:textColor">@color/tf</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.ItemTextAppearance">
        <item name="android:textColor">@color/ta</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Spinner" parent="android:Widget.DeviceDefault.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/tb</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColorPrimary">@color/ta</item>
        <item name="android:minWidth">302dp</item>
        <item name="android:maxWidth">302dp</item>
        <item name="android:colorPrimaryDark">@color/tg</item>
    </style>
</resources>